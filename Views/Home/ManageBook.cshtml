@{
    ViewData["Title"] = "ManageBook";
}
<div class="container mt-5 content-wrapper">
    <div class="page-header">
        <h1 class="text-center mb-2" style="color: aliceblue;">📚 Kitap Yönetimi Sistemi</h1>
        <br />
        <br />
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0 form-card">
                <div class="card-header text-white" style="background-color: #e46b00;opacity: 0.8;">
                    <h4 class="mb-0">
                        <span class="header-icon">➕</span> Yeni Kitap Ekle
                    </h4>
                </div>
                <div class="card-body">

                    <form method="post" id="bookForm">
                        <div class="form-step">
                            <div class="step-badge">1</div>
                            <div class="form-group">
                                <label for="title" class="font-weight-bold">
                                    📖 Kitap Adı <span class="text-danger">*</span>
                                </label>
                                <input type="text"
                                       id="title"
                                       name="title"
                                       class="form-control form-control-lg"
                                       placeholder="Örn: Masumiyet" />
                                <small class="form-text text-muted">Kitabın tam adını girin</small>
                            </div>
                        </div>

                        <div class="form-step">
                            <div class="step-badge">2</div>
                            <div class="form-group">
                                <label for="author" class="font-weight-bold">
                                    ✍️ Yazar <span class="text-danger">*</span>
                                </label>
                                <input type="text"
                                       id="author"
                                       name="author"
                                       class="form-control form-control-lg"
                                       placeholder="Örn: Orhan Pamuk"
                                       disabled />
                                <small class="form-text text-muted">Yazarın adını girin</small>
                            </div>
                        </div>

                        <div class="form-step">
                            <div class="step-badge">3</div>
                            <div class="form-group">
                                <label for="year" class="font-weight-bold">
                                    📅 Yayın Yılı <span class="text-danger">*</span>
                                </label>
                                <input type="number"
                                       id="year"
                                       name="year"
                                       class="form-control form-control-lg"
                                       placeholder="Örn: 2008"
                                       min="1500"
                                       max="2025"
                                       disabled />
                                <small class="form-text text-muted">Kitabın yayın yılını girin</small>
                            </div>
                        </div>

                        <div class="form-step">
                            <div class="step-badge">4</div>
                            <div class="form-group">
                                <label for="image" class="font-weight-bold">
                                    🖼️ Kitap Fotoğraf Linki <span class="text-danger">*</span>
                                </label>
                                <input type="url"
                                       id="image"
                                       name="image"
                                       class="form-control form-control-lg"
                                       placeholder="https://example.com/image.jpg"
                                       disabled />
                                <small class="form-text text-muted">Kitap kapağının URL adresini girin</small>
                            </div>
                        </div>

                        <div class="form-step">
                            <div class="step-badge">5</div>
                            <div class="form-group">
                                <label class="font-weight-bold"> 🏷️ Kitap Türü </label>
                                <div class="genre-options">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="klasik"
                                               name="tur"
                                               value="Klasik"
                                               disabled />
                                        <label class="form-check-label" for="klasik">
                                            📜 Klasik
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="roman"
                                               name="tur"
                                               value="Roman"
                                               disabled />
                                        <label class="form-check-label" for="roman">
                                            📕 Roman
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="hikaye"
                                               name="tur"
                                               value="Hikaye"
                                               disabled />
                                        <label class="form-check-label" for="hikaye">
                                            📘 Hikaye
                                        </label>
                                    </div>
                                </div>
                                <small class="form-text text-muted">Kitap türünü seçin (opsiyonel)</small>
                            </div>
                        </div>

                        <button type="submit"
                                class="btn btn-success btn-lg btn-block submit-btn">
                            <span class="btn-icon">✅</span> Kitabı Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0 statistics-card mb-4">
                <div class="card-header text-white" style="background-color: #e46b00;opacity: 0.8;">
                    <h4 class="mb-0">
                        <span class="header-icon">📊</span> Kütüphane İstatistikleri
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="stat-box stat-books">
                                <h3 class="stat-number">1</h3>
                                <p class="stat-label">Toplam Kitap</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box stat-authors">
                                <h3 class="stat-number">1</h3>
                                <p class="stat-label">Yazar</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box stat-genres">
                                <h3 class="stat-number">0</h3>
                                <p class="stat-label">Tür</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg border-0 table-card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <span class="header-icon">📚</span> Kayıtlı Kitaplar
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Kapak</th>
                                    <th>Kitap Bilgileri</th>
                                    <th>Yazar</th>
                                    <th>Yıl</th>
                                </tr>
                            </thead>
                            <tbody id="bookTableBody">
                                <tr>
                                    <td>
                                        <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQ86ta_Z3I0tTQJysNkQXxuyrq4SsPS5oTsltUZgbVIHRk8DD-T"
                                             alt="Kitap Kapağı"
                                             class="book-cover" />
                                    </td>
                                    <td>
                                        <strong>Masumiyet</strong>
                                        <br /><small class="text-muted">Türkçe Roman</small>
                                    </td>
                                    <td>
                                        <small>Orhan Pamuk</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-primary">2008</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/boostrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/book1-script.js"></script>
