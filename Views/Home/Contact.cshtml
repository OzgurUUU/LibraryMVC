<link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card p-4 contact-card-custom">
                <h2 class="card-title text-center mb-4 contact-title-custom">İLETİŞİM</h2>
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control form-control-lg" id="name" placeholder="Adınız" required>
                    </div>

                    <div class="mb-3">
                        <input type="email" class="form-control form-control-lg" id="email" placeholder="E-posta Adresiniz" required>
                    </div>

                    <div class="mb-4">
                        <textarea class="form-control form-control-lg" id="message" placeholder="Mesajınız" rows="5" required></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg btn-custom-submit">GÖNDER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>